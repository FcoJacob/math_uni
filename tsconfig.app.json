{
    "extends": "@vue/tsconfig/tsconfig.web.json",
    "include": [
        "env.d.ts",
        "types.d.ts",
        "src/**/*",
        "src/**/*.vue",
        "vitest.config.js"
    ],
    "exclude": ["src/__tests__/*", "node_modules"],
    "compilerOptions": {
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
    }
}
